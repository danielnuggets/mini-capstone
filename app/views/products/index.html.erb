<h2>Products</h2>

<% @products.each_slice(3) do |three_products| %>
  <div class="row">
  <% three_products.each do |product| %>
    <div class="col-md-4">
    <h4><a href="/products/<%= product.id %>"><%= product.name %></a></h4>
    <p>price: <%= number_to_currency(product.price) %></p>
    <p>description: <%= product.description %></p>
    <p><% product.stock_status %></p>
    <% if product.images[0] %>
      <img src=<%= product.images[0].link %> alt="unable to display image" width="100" height="100">
    <% end %>      
    </div>
  <% end %>
  </div>
<% end %>
