<h3>Change a product</h3>

<%= form_tag "/products/#{@product.id}", method: :patch do %>

<div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @product.name %>
</div>
<div>
  <%= label_tag :price %>
  <%= text_field_tag :price, @product.price %>
</div>
<div>
  <%= label_tag 'Enter an image URL' %>
  <%= text_field_tag :image, @product.image %>
</div>
<div>  
  <%= label_tag :description %>
  <%= text_field_tag :description, @product.description %>
</div>
<div>  
  <%= label_tag :stock %>
  <%= text_field_tag :stock, @product.stock %>
</div>
<div>  
  <%= collection_select :Supplier, :supplier_id, Supplier.all, :id, :name %>
</div>
  <%= submit_tag 'Submit' %>
<% end %>