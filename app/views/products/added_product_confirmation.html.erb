<h3>Product Added!</h3>

<h5>Add another product:</h5>

<%= form_tag '/addedproduct', method: :post do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :price %>
  <%= text_field_tag :price %>
  <%= label_tag :image %>
  <%= text_field_tag 'Enter an image URL' %>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  <%= submit_tag 'Submit' %>
<% end %>