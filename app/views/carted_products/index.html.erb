<h2>Shopping Cart</h2>

<% @carted_products.each do |carted_product| %>
  <p>
    <div>Product: <%= carted_product.product.name %></div>
    <div>Price: <%= number_to_currency(carted_product.product.price) %></div>
    <div>Quantity: <%= carted_product.quantity %></div>
    <%= form_tag "/carted_products/#{carted_product.id}", method: :delete do %>
      <%= submit_tag "Remove from Cart" %>
    <% end %>
  </p>
<% end %>

<%= form_tag "/orders", method: :post do %>
  <%= submit_tag "Check Out" %>
<% end %>